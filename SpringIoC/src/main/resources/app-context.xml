<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context
                            http://www.springramework.org/schema/context-spring-context.xsd" >

    <bean id="insertPaymentTask" class="kvhadzhiev.ioc.spring.db.InsertPayment" />

    <bean id="doPaymentsInsertionInvoker" class="kvhadzhiev.ioc.spring.scheduler.TaskInvoker">
        <property name="targetRepo" ref="insertPaymentTask" />
    </bean>

    <bean id="insertPaymentScheduledTask" class="kvhadzhiev.ioc.spring.scheduler.ScheduledTaskRunner">
        <!-- Inject value type(integer in this case) -->
        <property name="period" value="1000"/>
        <property name="invoker" ref="doPaymentsInsertionInvoker"/>
        <!-- <property name="logger" ref="actionsLogger"/> -->
        <!-- use this for circular dependency with actionsLogger bean -->
        <constructor-arg ref="actionsLogger"/>
    </bean>

    <bean id="actionsLogger" class="kvhadzhiev.ioc.spring.util.ActionLogger">
        <constructor-arg>
            <!-- Inject a java.util.List of objects from the same type -->
            <list>
                <ref bean="insertPaymentScheduledTask"/>
            </list>
        </constructor-arg>
    </bean>

</beans>